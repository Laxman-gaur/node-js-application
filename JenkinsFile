pipeline {
    agent any

    stages {
        stage('checkout'){
            steps {
                checkout([$class:'GitSCM',brances:[[name:'*/main']],extension:[], userRemoteConfig:[[url:'https://github.com/teknopathshala/terraform-s3-bucket-code']]])
            }
        }
        stage('terraform init'){
            steps {
                sh 'terraform init'
            }
        }
        stage('terraform action'){
            steps {
                echo "Terraform action is -->${action}"
                sh ('terraform ${action} --auto-approve')
            }
        }
    }
}